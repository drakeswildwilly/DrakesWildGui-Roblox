deathbutton.BackgroundColor3 = Color3.new(0.31372549,0.2,0)
deathbutton.Name = "Suicide Button"
deathbutton.Position = UDim2.new(0, 200, 0, 10)
deathbutton.Size = UDim2.new(0, 190, 0, 50)
deathbutton.Selectable = true
